{
  "compilerOptions": {
    /* Caminhos base e alias */
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },

    /* Build */
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Regras extras */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
